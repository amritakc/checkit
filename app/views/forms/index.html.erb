<h1>Survivor Information Survey</h1>


    <form  role="form" action="/create_form" method="post" class="col-sm-8">
          <input type='hidden' name="authenticity_token" value="<%= form_authenticity_token%>">
			<div class="form-group">
				<label for="gnder">Gender:</label>
					<select class="form-control" id="gender">
						<option>Male</option>
						<option>Female</option>
						<option>Other</option>
					</select>
			</div>
			<div class="form-group">
				<label for="age">Age:</label>
					<select class="form-control" id="age">
						<option>5-12</option>
						<option>12-18</option>
						<option>18+</option>
					</select>
			</div>
			<div class="form-group">
				<label for="contact_point">Contact Point Location:</label>
				<input type="text" class="form-control" id="contact_point" name="contact_point">
			</div>
			<div class="form-group">
				<label for="previous_meeting">Have you met with this individual before?</label>
					<select class="form-control" id="previous_meeting">
						<option value = "true">Yes</option>
						<option value = "false">No</option>
					</select>
			</div>
			<div class="form-group">
				<label for="responder_name">Responder Name:</label>
				<input type="text" class="form-control" id="responder_name" name="responder_name">
			</div>
	 	<button type="submit" class="btn btn-default">Submit</button>
    </form>
	